<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Details</h2>
  <%= f.fields_for :details do |detail| %>
    <%= render 'detail_fields', f: detail %>
    <%= link_to_add_association("Add line", f, :details, { wrapper_class: 'detail_fields' }) %>
  <% end %>

  <div class="field">
    <% if @order.updated_at? %>
      <%= f.label :Fecha %><br>
      <%= f.date_field :created_at %><br>
    <% end %>
    <%= f.label :Additional %><br>
    <%= f.text_field :extra %><br>
    <%= f.label :extra %><br>
    <%= f.text_field :other %>
  </div>
  
  <h2>Clients</h2>
  <%= f.select :client_id, options_for_select(Client.pluck(:name, :id))%><br>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
