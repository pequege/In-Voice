<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Bill to name</th>
      <th>Bill to org</th>
      <th>Bill to address</th>
      <th>Bill to email</th>
      <th>Extra notes</th>
      <th>Extra others</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.date %></td>
        <td><%= order.bill_to_name %></td>
        <td><%= order.bill_to_org %></td>
        <td><%= order.bill_to_address %></td>
        <td><%= order.bill_to_email %></td>
        <td><%= order.extra_notes %></td>
        <td><%= order.extra_others %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

