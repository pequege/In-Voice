    <div class="field input-field col s6">
      <%= f.text_field :email %>
      <%= label_tag "Email" %>
    </div>
  </div>
  <div class="row">
    <div class="field input-field col s6">
      <i class="material-icons prefix">business</i>
      <%= f.text_field :organization, id: "icon_business" %>
      <%= label_tag "icon_business", "Organization" %>
    </div>
    <div class="field input-field col s6">
      <%= f.text_field :address %>
      <%= label_tag "address" %>
    </div>
  </div>
  <div class="row">
    <div class="field input-field col s12">
      <i class="material-icons prefix">http</i>
      <%= f.text_field :url, id: "icon_http" %>
      <%= label_tag "icon_http", "URL" %>
    </div>
  </div>
  <div class="row">
    <div class="field col s12">
      <%= label_tag "Choose client language" %>
      <%= f.select :language, [['English', 'en'], ['EspaÃ±ol', 'es']] %>
