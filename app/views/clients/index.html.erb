<p id="notice"><%= notice %></p>

<h1>Listing Clients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { 
                  confirm: "You are about to delete this client and #{client.orders.count} orders related"
                } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<i class="fa fa-user-plus"></i>
<%= link_to 'New Client', new_client_path %>
